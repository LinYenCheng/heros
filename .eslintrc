{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier", "react-hooks"],
  "rules": {
    "prettier/prettier": ["error"],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react-hooks/rules-of-hooks": "error"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "jquery": true,
    "jest": true,
    "es6": true,
    "node": true
  }
}
